rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Products images folder
    match /products/{allPaths=**} {
      // Anyone can read images
      allow read: if true;
      
      // Only authenticated users can upload/update/delete images
      allow write: if request.auth != null;
    }

    // Categories images folder
    match /categories/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Slides images/videos folder
    match /slides/{allPaths=**} {
      // Anyone can read slides
      allow read: if true;
      
      // Only authenticated users can upload/update/delete slides
      allow write: if request.auth != null;
    }
  }
}
